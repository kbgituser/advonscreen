        @Html.RadioButtonFor(s => s.AdvertisementType, Dal.Models.AdvertisementType.Photo)@Html.Label("Фото")<br />
        @Html.RadioButtonFor(s => s.AdvertisementType, Dal.Models.AdvertisementType.Video)@Html.Label("Видео")<br />*@

                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary active">
                        <input class="btn btn-info" type="radio" checked value=@Dal.Models.AdvertisementType.Text name="AdvertisementType" autocomplete="off" />Текст
                    </label>
                    <label class="btn btn-secondary">
                        <input class="btn btn-info" type="radio" value=@Dal.Models.AdvertisementType.Photo name="AdvertisementType" autocomplete="off" />Фото
                    </label>
                    <label class="btn btn-secondary">
                        <input class="btn btn-info" type="radio" value=@Dal.Models.AdvertisementType.Video name="AdvertisementType" autocomplete="off" />Видео
